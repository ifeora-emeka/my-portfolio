<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <nav class="flex items-center mb-8 text-sm font-medium">
      <a href="/" class="text-primary hover:text-accent transition-colors">Home</a>
      <span class="mx-2 text-muted-foreground">/</span>
      <a href="/services" class="text-primary hover:text-accent transition-colors">Services</a>
      <span class="mx-2 text-muted-foreground">/</span>
      <span class="text-muted-foreground"><%= locals.service?.name || 'Service' %></span>
    </nav>

    <% if (locals.service) { %>
      <div class="text-center mb-16">
        <div class="inline-block mb-4">
          <span class="bg-gradient-to-r from-primary to-accent text-white px-6 py-2 rounded-full text-sm font-semibold">Premium Service</span>
        </div>
        <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-primary via-accent to-secondary bg-clip-text text-transparent"><%= locals.service.name %></h1>
        <p class="text-xl text-muted-foreground max-w-3xl mx-auto"><%= locals.service.description %></p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-primary via-accent to-secondary rounded-xl blur opacity-25 group-hover:opacity-50 transition duration-300"></div>
          <div class="relative">
            <img src="<%= locals.service.image %>" class="w-full h-80 object-cover rounded-xl shadow-2xl" alt="<%= locals.service.name %>">
          </div>
        </div>
        <div class="flex flex-col justify-center">
          <h3 class="text-3xl font-bold mb-6 text-primary">What We Offer</h3>
          <p class="text-lg text-muted-foreground mb-8 leading-relaxed"><%= locals.service.details %></p>
          <% if (locals.service.features && locals.service.features.length > 0) { %>
            <ul class="space-y-4">
              <% locals.service.features.forEach((feature, index) => { %>
                <li class="flex items-start group">
                  <span class="flex-shrink-0 w-6 h-6 rounded-full bg-gradient-to-br from-primary to-accent flex items-center justify-center text-white text-sm font-bold mr-3 group-hover:scale-110 transition-transform">âœ“</span>
                  <span class="text-foreground group-hover:text-primary transition-colors"><%= feature %></span>
                </li>
              <% }) %>
            </ul>
          <% } %>
        </div>
      </div>

      <% if (locals.service.technologies && locals.service.technologies.length > 0) { %>
        <div class="relative mb-16">
          <div class="absolute inset-0 bg-gradient-to-r from-primary/5 via-accent/5 to-secondary/5 rounded-2xl"></div>
          <div class="relative p-10 rounded-2xl border-2 border-primary/20">
            <h3 class="text-3xl font-bold mb-8 text-center bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">Technologies We Use</h3>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
              <% locals.service.technologies.forEach((tech, index) => { %>
                <div class="group relative">
                  <div class="absolute inset-0 bg-gradient-to-br from-primary to-accent rounded-lg opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  <div class="relative bg-white border-2 border-primary/20 rounded-lg px-4 py-3 text-center text-sm font-semibold text-foreground group-hover:text-white group-hover:border-transparent transition-all transform group-hover:scale-105">
                    <%= tech %>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      <% } %>

      <div class="text-center mb-16 py-16 px-6 rounded-2xl bg-gradient-to-br from-primary/10 via-accent/10 to-secondary/10">
        <h3 class="text-4xl font-bold mb-6 bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">Ready to Get Started?</h3>
        <p class="text-lg text-muted-foreground mb-10 max-w-2xl mx-auto">Let's discuss your <%= locals.service.name.toLowerCase() %> project and bring your ideas to life.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact-us" class="inline-flex items-center justify-center rounded-lg bg-gradient-to-r from-primary to-accent px-10 py-4 text-base font-semibold text-white hover:shadow-2xl transition-all transform hover:scale-105">
            Get Quote
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
          <a href="/contact-us" class="inline-flex items-center justify-center rounded-lg border-2 border-primary bg-white px-10 py-4 text-base font-semibold text-primary hover:bg-primary hover:text-white transition-all transform hover:scale-105">
            Contact Us
          </a>
        </div>
      </div>
    <% } else { %>
      <div class="text-center py-20">
        <div class="text-8xl mb-6">ðŸ˜•</div>
        <h1 class="text-5xl font-bold text-destructive mb-6">Service Not Found</h1>
        <p class="text-lg text-muted-foreground mb-10">The service you're looking for doesn't exist.</p>
        <a href="/services" class="inline-flex items-center justify-center rounded-lg bg-gradient-to-r from-primary to-accent px-8 py-4 text-base font-semibold text-white hover:shadow-xl transition-all">View All Services</a>
      </div>
    <% } %>

    <div class="text-center mt-12">
      <a href="/services" class="inline-flex items-center justify-center rounded-lg bg-secondary text-secondary-foreground px-8 py-3 text-sm font-semibold hover:bg-secondary/80 transition-all">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Services
      </a>
    </div>
  </div>
</div>
